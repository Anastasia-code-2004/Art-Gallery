<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtGalleryApp.Pages.ForAdmin.InfoPaintingPage"
             xmlns:local="clr-namespace:ArtGalleryApp.Pages.ForAdmin"
             x:DataType="local:InfoPaintingPage"
             
             Title="InfoPaintingPage">
    <StackLayout Margin="20">
        <Label Text="{Binding Painting.Name}" FontSize="Large" FontAttributes="Bold" />
        <Label Text="{Binding Painting.Author}" FontSize="Medium" />
        <Label Text="{Binding Painting.YearOfCreation}" FontSize="Medium" />
        <Image Source="{Binding Painting.ImagePath}" Aspect="AspectFit" HeightRequest="200" />
    </StackLayout>
</ContentPage>