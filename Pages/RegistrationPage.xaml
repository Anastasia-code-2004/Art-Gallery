<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ArtGalleryApp.Pages"
             x:DataType="local:RegistrationPage"
             x:Class="ArtGalleryApp.Pages.RegistrationPage">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Entry x:Name="EmailEntry" Placeholder="Email" Text="{Binding Email}"/>
            <Entry x:Name="PhoneEntry" Placeholder="Phone number" Text="{Binding Phone}"/>
            <Entry x:Name="NameEntry" Placeholder="Name" Text="{Binding Name}"/>
            <Entry x:Name="SurnameEntry" Placeholder="Surname" Text="{Binding Surname}"/>
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
            <Button Text="Register" Clicked="RegisterButton_OnClicked"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>