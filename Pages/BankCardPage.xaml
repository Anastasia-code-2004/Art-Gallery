<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ArtGalleryApp.Views"
             x:Class="ArtGalleryApp.Pages.BankCardPage"
             Title="BankCardPage">
    <ScrollView>

        <StackLayout Orientation="Vertical">
            <Button Text="Add New Card"
                    Clicked="OnAddNewCardClicked" />
            <CollectionView x:Name="BankCardsCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <views:CreditCardView CardNumber="{Binding CardNumber}"
                                              ExpirationDate="{Binding ExpiryDate}"
                                              CardValidationCode="{Binding CVV}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>